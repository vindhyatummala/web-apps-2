<% if @username !=nil %>
  <h1>Roll the dice, <%= @username %></h1>
  <p>
    <img src="/images/dice/<%= @die1 %>.svg">
    <img src="/images/dice/<%= @die2 %>.svg">
  </p>
  <p>
    The total is <%= @total %>
  </p>
  <p>
    <a href="/dice?username= <%= @username %>">Roll Again</a>
  </p>
  <% else %>
  <h1>What is your name?</h1>
  <form action="/dice">
    <input type="text" name="username">
    <button>Let's play!</button>
  </form>
<% end %>